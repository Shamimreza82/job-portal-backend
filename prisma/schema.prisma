generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/////////// 
enum Role {
  HR
  USER
  ADMIN
  MODERATOR
}

model User {
  id              String   @id @default(uuid())
  fullName        String?
  email           String   @unique
  phone           String?  @unique
  isActive        Boolean  @default(true)
  isEmailVerified Boolean  @default(false)
  password        String
  role            Role     @default(USER)
  createdAt       DateTime @default(now())

  profile      Profile?
  certificates Certificate[]
}

////// Profile //////////////////////////////

model Profile {
  id              String          @id @default(uuid())
  avatar          String?
  dob             DateTime
  address         String
  country         String
  zip             String
  maritalStatus   Boolean
  bio             String
  isVerified      Boolean
  totalExperience String
  portfolioLink   String?
  socialLink      String[]
  resumeUpload    String?
  certificates    Certificate[]
  workExperience  WorkExprience[]
  education       Education[]
  skill           String[]

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model WorkExprience {
  id              String    @id @default(uuid())
  jobTitle        String
  companyTitle    String
  companyLocation String
  jobRole         String
  startDate       DateTime
  endDate         DateTime?
  profile         Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId       String
}

model Education {
  id        String    @id @default(uuid())
  degree    String
  academy   String
  startDate DateTime
  endDate   DateTime?

  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String
}

model Certificate {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  name       String // name of the certificate
  filePath   String // path to the uploaded file
  uploadedAt DateTime @default(now())
  profile    Profile? @relation(fields: [profileId], references: [id])
  profileId  String?
}

///// Profile ////////////////////

///// Job Post /////

enum JobType {
  FULL_TIME
  REMOTE
  HYBIRD
}

model Job {
  id               String      @id @default(uuid())
  title            String
  jobRole          String
  jobUniqueId      String      @unique
  slug             String
  responsibilities Json
  features         Json
  requirments      Json
  requirSkills     String[]
  jobType          JobType
  salaryRange      String
  location         String
  expDate          DateTime
  createdAt        DateTime    @default(now())
  category         JobCategory @relation(fields: [categoryId], references: [id])
  categoryId       String
}

model JobCategory {
  id    String  @id @default(uuid())
  title String
  desc  String?
  jobs  Job[]
}

///// Job Post /////

model JobAlart {
  id    String @id @default(uuid())
  email String @unique
}
